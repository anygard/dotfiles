$include /etc/inputrc

"\t": menu-complete
"\e[Z": menu-complete-backward
"`": complete

set colored-stats On

# ignore case when competing filenames
set completion-ignore-case On

# replace longer common prefixes with ellipis
set completion-prefix-display-length 5

# show file "type" by a trailing char while showing completion options
set visible-stats On

# show a completed (symlinked) directory with a traling slash
set mark-directories on
set mark-symlinked-directories On

# list all alternatives if there is more then one instead of hitting the bell
set show-all-if-ambiguous On

# list all complete completions when there are no partials, instead of hitting the bell
set show-all-if-unmodified On

# use a visual bell instead of the annoying beep
set bell-style visible

